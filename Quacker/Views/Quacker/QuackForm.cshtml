<form name="{{formName}}" novalidate>
	<div class="form-group" ng-class="{ 'has-error': {{formName}}.content.$touched && {{formName}}.content.$invalid }">
		<label for="content" class="control-label">Write a quack</label>
		<span class="form-control-static" ng-show="{{formName}}.content.$touched && {{formName}}.content.$invalid">Message is required</span>
		<textarea class="form-control" name="content" maxlength="250" ng-required="true" ng-maxlength="250" ng-model="quack.Content" />
	</div>
	<div class="form-group">
		<input type="submit" class="btn btn-primary btn-default" value="Quack quack" ng-disabled="{{formName}}.$invalid" ng-click="onPost({quack: quack})" />
	</div>
</form>
