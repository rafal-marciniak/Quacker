<div class="row" style="margin-top: 100px">
	<div class="col-md-4 col-sm-3 col-xs-2"></div>
	<div class="col-md-4 col-sm-6 col-xs-8">
		<div>
			<div class="bubble">
				<h4>What's your name?</h4>
			</div>
			<div class="duck-crop">
				<img src="~/Images/duck-icon256.png" />
			</div>
		</div>
		<div class="panel panel-default">
			<!--<div class="panel-heading">What's your name?</div>-->
			<div class="panel-body">
				<form name="loginForm" novalidate>
					<div class="form-group">
						<input type="text" class="form-control" name="name" maxlength="50" placeholder="Username"
							   ng-maxlength="50" ng-required="true" ng-model="loginCtrl.name" ng-model-options="{ getterSetter: true }" /> <!--updateOn: 'blur', debounce: 500-->
					</div>
					<div class="form-group">
						<a href="/#/dashboard" role="button" class="btn btn-primary btn-defaul btn-block" ng-disabled="loginForm.$invalid">Enter</a>
					</div>
				</form>
			</div>
		</div>
	</div>
	<div class="col-md-4 col-sm-3 col-xs-2"></div>
</div>
