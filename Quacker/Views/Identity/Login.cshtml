<div class="row">
	<div class="col-md-4"></div>
	<div class="col-md-4">
		<form name="loginForm" novalidate>
			<div class="form-group" ng-class="{ 'has-error': loginForm.name.$touched && loginForm.name.$invalid  }">
				<label for="name" class="control-label">What's your name?</label>
				<span class="form-control-static" ng-show="loginForm.name.$touched && loginForm.name.$invalid">Name is required</span>
				<input type="text" class="form-control" name="name" maxlength="25"
					ng-maxlength="25" ng-required="true" ng-model="loginCtrl.name" ng-model-options="{ getterSetter: true }" /> <!--updateOn: 'blur', debounce: 500-->	   
			</div>
			<div class="form-group">
				<a href="/#/dashboard" role="button" class="btn btn-primary btn-default" ng-disabled="loginForm.$invalid">Enter</a>
			</div>	
		</form>	
	</div>
	<div class="col-md-4"></div>
</div>